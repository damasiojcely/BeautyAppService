<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="price">
        <field-validator type="int">
            <message>Ingrese un valor numerico</message>
        </field-validator>
    </field>
    <field name="start">
        <field-validator type="date">
            <message>solo se permite fechas</message>
        </field-validator>
    </field>
    <field name="end">
        <field-validator type="date">
            <message>Solo se permite fechas</message>
        </field-validator>
    </field>
</validators>